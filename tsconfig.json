{
	"compilerOptions": {
		"lib": [
			"es6",
			"es2021",
			"esnext"
		],
		"target": "ES2020",
		"module": "CommonJS",
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "Classic",
		"rootDir": "./src",
		"outDir": "./lib",
		"esModuleInterop": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types",
			"./*.d.ts"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"lib/**/*"
	]
}
